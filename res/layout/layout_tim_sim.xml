<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp" >

            <ImageView
                android:id="@+id/imgMenhAvatar"
                android:layout_width="wrap_content"
                android:layout_height="190dp"
                android:src="@drawable/chu_phong_thuy_sim" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lbl_tim_sim_so_dien_thoai" />

                <EditText
                    android:id="@+id/txt_tim_sim_sim"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0922926269"
                    android:ems="10" 
                    android:inputType="numberSigned"/>
            </LinearLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp" >

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/lbl_lvitem_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="@string/lbl_tim_sim_Loai" />

                    <TextView
                        android:id="@+id/txt_sim_thanh_cong_thank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:text="@string/lbl_tim_sim_Gia" />
                </TableRow>

                <TableRow
                    android:id="@+id/tableRow2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <Spinner
                        android:id="@+id/cb_tim_sim_mang"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="2" />

                    <Spinner
                        android:id="@+id/cb_tim_sim_gia"
                        android:layout_width="0px"
                        android:layout_height="wrap_content"
                        android:layout_weight="2" />
                </TableRow>
            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/lbl_tim_sim_diem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/lbl_tim_sim_ngay_sinh" />
            </LinearLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp" >

                <TableRow
                    android:id="@+id/tableRow3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <EditText
                        android:id="@+id/txt_tim_sim_ngay"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:ems="10"
                        android:hint="Ngày"
                        android:text="1"
                        android:inputType="numberSigned" />

                    <EditText
                        android:id="@+id/txt_tim_sim_thang"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:ems="10"
                        android:hint="Tháng"
                        android:text="9"
                        android:inputType="numberSigned" />

                    <EditText
                        android:id="@+id/txt_tim_sim_nam"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:ems="10"
                        android:hint="Năm"
                        android:text="1988"
                        android:inputType="numberSigned" />
                </TableRow>
            </TableLayout>

            <Button
                android:id="@+id/btn_tim_sim_search"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="50dp"
                android:background="@drawable/button"
                android:text="TÌM SIM"
                android:textColor="@color/white" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>